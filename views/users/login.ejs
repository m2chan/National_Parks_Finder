<body class="h-100">
	<%- include('../partials/flash') %>
    <div class="row w-100 h-100">
        <div class="col-lg-6 d-none d-lg-block h-100 background-image-container">
            <img class="background-image"
                src="https://res.cloudinary.com/dsykt6xxf/image/upload/v1609712077/NationalParks/US/zion3_ua5sv5.jpg"
                alt="">
        </div>

        <div class="offset-sm-2 col-sm-8 offset-lg-0 col-lg-6 h-100">
            <div class="card register-card">
                <div class="card-body">
                    <div class="mb-3">
                        <form action="/parks?page1" method="get">
                            <button class="back-button"><i class="fa fa-angle-left back-arrow"></i>Back to
                                parks</button>
                        </form>
                    </div>
                    <h1 class="card-title mb-3">Log in</h1>
                    <p class="text-muted">
                        Log in to post reviews and photos
                    </p>
                    <form action="/login" method="post" class="validated-form mb-3" novalidate>
						<div class="mb-3">
							<label class="form-label" for="username">Username</label>
							<input type="text" class="form-control" id="username" name="username" required autofocus>
							<div class="invalid-feedback">
								Please try again!
							</div>
						</div>

						<div class="mb-3">
							<label class="form-label" for="password">Password</label>
							<input type="password" class="form-control" id="password" name="password" required>
							<div class="invalid-feedback">
								Please try again!
							</div>
						</div>
						
						<button class="btn btn-success w-100">Log me in</button>
					</form>
                </div>
            </div>
        </div>

    </div>
</body>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
